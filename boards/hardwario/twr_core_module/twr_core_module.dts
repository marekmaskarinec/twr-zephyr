/dts-v1/;
#include <st/l0/stm32l083Xz.dtsi>
#include <st/l0/stm32l083c(b-z)tx-pinctrl.dtsi>

/ {
	model = "Tower Core Module";
	compatible = "hardwario,twr-core-module";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpioh 1 GPIO_ACTIVE_HIGH>;
			label = "LED 0";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpioa 8 GPIO_ACTIVE_HIGH>;
		};
	};

	aliases {
		led0 = &led0;
		sw0 = &button0;
	};
};

&clk_lsi {
	status = "okay";
};

&clk_hsi48 {
	status = "okay";
};

&clk_hsi {
	status = "okay";
};

&pll {
	status = "okay";
	div = <2>;
	mul = <4>;
	clocks = <&clk_hsi>;
};

&rcc {
	status = "okay";
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(32)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <1>;
	apb2-prescaler = <1>;
};

&usart1 {
	status = "okay";
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa10>;
	pinctrl-names = "default";
	current-speed = <115200>;
	parity = "none";
	stop-bits = "1";
	data-bits = <8>;
};

&i2c2 {
	status = "okay";
	pinctrl-0 = <&i2c2_scl_pb10 &i2c2_sda_pb11>;
	pinctrl-names = "default";

	tmp112@49 {
		compatible = "ti,tmp112";
		status = "okay";
		reg = <0x49>;
	};

	lis2dh@19 {
		compatible = "st,lis2dh";
		status = "okay";
		reg = <0x19>;
		irq-gpios = <&gpiob 6 GPIO_ACTIVE_HIGH>;
	};

	atsha204@64 {
		compatible = "microchip,atsha204";
		status = "okay";
		reg = <0x64>;
	};
};

&spi1 {
	status = "okay";
	pinctrl-0 = <&spi1_miso_pb4 &spi1_mosi_pb5 &spi1_sck_pb3>;
	pinctrl-names = "default";
	cs-gpios = <&gpioa 15 GPIO_ACTIVE_LOW>;

	spirit1: spirit1@0 {
		status = "okay";
		compatible = "st,spirit1";
		reg = <0>;
		spi-max-frequency = <DT_FREQ_M(1)>;
		irq-gpios = <&gpioa 7 GPIO_ACTIVE_LOW>;
		sdn-gpios = <&gpiob 7 GPIO_ACTIVE_HIGH>;
	};
};
